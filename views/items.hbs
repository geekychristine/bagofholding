{{#if item }}

  {{#if success}} 
    <div class="alert alert-success">
      {{success}}
    </div>
  {{/if}}

  <h1>{{item.name}}</h1>
  <p>{{item.type}}, {{item.rarity}} Item</p>

  <p>{{item.desc}}</p>
  <p>Requires Attunement? {{#if item.requires_attunement}} Yes {{else}} No {{/if}}</p>

{{else}}

<h1>All Magic Items</h1>
<p>Total Items: {{items.length}}</p>

<table class="table table-bordered table-hover table-striped">
  <tr>
    <th scope="col">Name</th>
    <th scope="col">Type</th>
    <th scope="col">Rarity</th>
    <th scope="col">Attunement?</th>
    <th></th>
  </tr>
  {{#each items}}
  <tr>
    <td>
      <a href="{{slug}}">{{name}}</a>
    </td>
    <td>
     {{type}}
    </td>
    <td>
      {{rarity}}
    </td>
    <td>
      {{#if requires_attunement}}
        ({{requires_attunement}})
      {{/if}}
    </td>
    <td>      
      <button class="btn btn-primary">Edit</button>
      <button class="btn btn-danger">Delete</button>
    </td>
  </tr>
  {{/each}}
</table>

{{/if}}
